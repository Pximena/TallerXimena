<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.tallerximena.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cazadora_rockera">
        </ImageView>


        <TextView
            android:id="@+id/string_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_1"
            android:layout_centerInParent="true"
            android:textSize="70sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/string_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_2"
            android:layout_alignLeft="@id/string_1"
            android:layout_centerInParent="true"
            android:layout_below="@id/string_1"
            android:paddingLeft="30dp"
            android:paddingTop="90dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/string_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_4"
            android:layout_below="@id/string_1"
            android:layout_centerInParent="true"
            android:paddingTop="90dp"
            android:layout_toRightOf="@id/string_2"
            android:textSize="20sp"

            android:textColor="@color/orange"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_3"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="30dp"
                        android:background="@drawable/im11" />

                    <TextView
                        android:id="@+id/string_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_5"
                        android:layout_below="@id/im_1"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_6"
                        android:layout_below="@id/string_4"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/im_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/im16"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp" />
                    <TextView
                        android:id="@+id/string_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_7"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/im_3"
                        android:layout_marginRight="50dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_6"
                        android:layout_below="@id/string_5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="90dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/im_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="30dp"
                        android:background="@drawable/im13" />

                    <TextView
                        android:id="@+id/string_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_5"
                        android:layout_below="@id/im_2"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_6"
                        android:layout_below="@id/string_6"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/im_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/im14"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp" />

                    <TextView
                        android:id="@+id/string_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_7"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/im_4"
                        android:layout_marginRight="50dp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_6"
                        android:layout_below="@id/string_8"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="90dp"
                        android:textColor="@color/black"/>

                </RelativeLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>




</LinearLayout>
